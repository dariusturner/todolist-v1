<%-include("header")-%>

    <div class="box" id="heading">
      <h1><%=listTitle%></h1>
    </div>

    <div class="box">
    <% if (newListItems.length < 1) { %>
      <p class="intro">Add a list of things you need to do...</p>
    <% } %>

      <% newListItems.forEach(function(item) { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"></input>
            <p><%=item.name%></p>
          </div>
          <input type="hidden" name="listName" value="<%=listTitle%>"></input>
        </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Add a new item here" autocomplete="off"></input>
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
    </div>

<%-include("footer")-%>
